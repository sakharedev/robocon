<?xml version='1.0' ?>

<xacro:include filename="$(find robot_two)/urdf/robot.gazebo" />
<xacro:include filename="$(find robot_two)/urdf/robot.trans" />
<xacro:include filename="$(find robot_two)/urdf/materials.xacro" />

<material name="Red">
  <color rgba="1 0 0 1"/>
</material>

<material name="Black">
  <color rgba="0 0 0 1"/>
</material>



<robot name="robot_two" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0.5 0.5 0.5"/>
      </geometry>
      <material name="Red"/>
    </visual>
  </link>
  <link name="wheel_front_left">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="Black"/>
    </visual>
  </link>
  <link name="wheel_front_right">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="Black"/>
    </visual>
  </link>
  <link name="wheel_back_left">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="Black"/>
    </visual>
  </link>
  <link name="wheel_back_right">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="Black"/>
    </visual>
  </link>

  <joint name="joint_front_left" type="continuous">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="wheel_front_left"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="joint_front_right" type="continuous">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="wheel_front_right"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="joint_back_left" type="continuous">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="wheel_back_left"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="joint_back_right" type="continuous">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="base_link"/>
    <child link="wheel_back_right"/>
    <axis xyz="0 0 1"/>
  </joint>
  

</robot>
